        <TextBlock x:ConnectionId='7' Name="Val2_T" Text="Val2"  Height="30px" FontSize="20px" Margin="0,0,0,0" />
        <TextBox x:ConnectionId='8' Name="Val2" Width="300px" Height="30px" FlowDirection="LeftToRight" Margin="0,0,0,0" />
        <TextBlock x:ConnectionId='9' Name="Val3_T" Text="Val3"  Height="30px" FontSize="20px" Margin="0,100,0,0" />
        <TextBox x:ConnectionId='10' Name="Val3" Width="300px" Height="30px" FlowDirection="LeftToRight" Margin="0,100,0,0" />
        <TextBlock x:ConnectionId='11' Name="Val4_T" Text="Val3"  Height="30px" FontSize="20px" Margin="0,200,0,0" />
        <TextBox x:ConnectionId='12' Name="Val4" Width="300px" Height="30px" FlowDirection="LeftToRight" Margin="0,200,0,0" />
    </Grid>
</Page>

